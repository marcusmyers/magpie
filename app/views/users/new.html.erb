<h1>New User</h1>
<%= form_for @user do |f| %>
  <div class='field'>
    <%= f.label :email, 'User Email' %>
    <%= f.text_field :email %>
  </div>

  <div class='field'>
    <%= f.label :username, 'User Username' %>
    <%= f.text_field :username %>
  </div>

  <div class='field'>
    <%= f.label :password, 'User Password' %>
    <%= f.text_field :password %>
  </div>

  <div class='actions'>
    <%= f.submit %>
  </div>
<% end %>
